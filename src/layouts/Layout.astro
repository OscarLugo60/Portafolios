---
interface Props {
	description: string;
	title: string;
}

const {description, title } = Astro.props;

import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '@fontsource-variable/urbanist';
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/img/Avatar.webp" />
		<meta name="generator" content={Astro.generator} />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<title>{title}</title>
	</head>
	<!-- Google tag (gtag.js) -->
	<script async src="https://www.googletagmanager.com/gtag/js?id=G-4VQKQL0E1N"></script>
	<script type="text/javascript">
	window.dataLayer = window.dataLayer || [];
	function gtag(){dataLayer.push(arguments);}
	gtag('js', new Date());

	gtag('config', 'G-4VQKQL0E1N');
	</script>
	<body>
		<Header />
		<slot />
		<Footer />
		<script src="../../node_modules/flowbite/dist/flowbite.min.js"></script>
	</body>
</html>
<style is:global>
	html {
		font-family: 'Urbanist', system-ui, sans-serif;
		scroll-behavior: smooth !important;
	}
	body{
		background-color: #172026;
		display: flex;
		flex-direction: column;
		min-height: 100vh;
	}
	#index{
		background-image: url('/img/background-laptop2.webp');
		background-repeat: no-repeat;
		background-position: center;
		background-size: cover;
	}
	#contact{
		background-image: url('/img/2968880.webp');
		background-repeat: no-repeat;
		background-position: center;
		background-size: cover;
	}
	p{
		width: 80%;
		color: #027373;
	}
	@media(prefers-reduced-motion: reduce){
		html{
			scroll-behavior: auto;
		}
	}
</style>
