---
import PythonIcon from "../icons/PythonIcon.astro";
import DjangoIcon from "../icons/DjangoIcon.astro";
import JSIcon from "../icons/JSIcon.astro";
import PHPIcon from "../icons/PHPIcon.astro";
import CIcon from "../icons/CIcon.astro";
import VueIcon from "../icons/VueIcon.astro";
import MySQL from "../icons/MySQL.astro";
import Postgres from "../icons/Postgres.astro";
import SQLite from "../icons/SQLite.astro";
import VSCodeIcon from "../icons/VSCode.astro";
import Figma from "../icons/Figma.astro";
import GitIcon from "../icons/GitIcon.astro";
import Photoshop from "../icons/Photoshop.astro";
import Bootstrap from "../icons/Bootstrap.astro";
