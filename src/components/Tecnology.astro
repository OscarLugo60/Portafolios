<div class="flex flex-col items-center justify-center gap-y-1 p-1 rounded-sm transition hover:bg-[#0f1316] hover:shadow-md hover:shadow-[#04BF9D55] cursor-pointer min-w-20">
    <PythonIcon class="size-14" />
    <h3 class="text-[#027373] text-xs text-center">Python</h3>
</div>
<div class="flex flex-col items-center justify-center gap-y-2.5 p-1 rounded-sm transition hover:bg-[#0f1316] hover:shadow-md hover:shadow-[#04BF9D55] cursor-pointer min-w-20">
    <DjangoIcon class="size-12" />
    <h3 class="text-[#027373] text-xs text-center">Django</h3>
</div>
<div class="flex flex-col items-center justify-center gap-y-4 p-1 rounded-sm transition hover:bg-[#0f1316] hover:shadow-md hover:shadow-[#04BF9D55] cursor-pointer min-w-20">
    <JSIcon class="size-10 rounded" />
    <h3 class="text-[#027373] text-xs text-center">JavaScript</h3>
</div>
<div class="flex flex-col items-center justify-center gap-y-2 p-1 rounded-sm transition hover:bg-[#0f1316] hover:shadow-md hover:shadow-[#04BF9D55] cursor-pointer min-w-20">
