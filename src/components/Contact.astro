    emailjs.init('Anh6_eXZZm5wASyGM')

    const btn = document.getElementById('button') as HTMLInputElement;

    document.getElementById('form')
    .addEventListener('submit', function(event) {
    event.preventDefault();

    const formElement = this as HTMLFormElement;

    btn.value = 'Enviando...';

    const serviceID = 'default_service';
    const templateID = 'template_xkghjos';

    emailjs.sendForm(serviceID, templateID, formElement)
        .then(() => {
